@page
@model FirstRazorApp.Pages.Employeers.IndexModel
@{
    ViewData["Title"] = "Employees";
}

<h1 class="text-center">Employees: @Model.Employees.Count()</h1>
@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success text-center">@TempData["SuccessMessage"]</div>
}

<div class="row">


    @foreach (var item in Model.Employees)
    {

        var photoPath = $"~/images/{item.PotoPath ?? "noimage.png"}";

        <div class="col-12 col-sm-6 col-lg-4">

            <div class="card-deck">
                <div class="card m-3 cardBoxShadow">
                    <div class="card-header text-center cardHeaderStyle">
                        <h3>@item.Name</h3>
                    </div>
                    <div class="text-center cardBodyStyle">
                        <img class="card-img-top imageThumbnail" src="@photoPath" asp-append-version="true" />
                    </div>
                    <div class="card-footer text-center">
                        <!--Первый способ передать параметр через строку браузера asp-route-ID-->
                        <a asp-page="/Employeers/Details" asp-route-ID="@item.Id" class="btn btn-success m-1 buttonShadow">View</a>
                        <a asp-page="/Employeers/Edit" asp-route-ID="@item.Id" class="btn btn-primary m-1 buttonShadow">Edit</a>
                        <a asp-page="/Employeers/Delete" asp-route-ID="@item.Id" class="btn btn-danger m-1 buttonShadow">Delete</a>
                    </div>

                </div>
            </div>
        </div>
    }
</div>

